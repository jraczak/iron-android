<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/exercise_card"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.justinraczak.android.squadgoals.ExerciseFragment"
    android:layout_gravity="center"
    android:layout_marginTop="16dp"
    android:layout_marginBottom="0dp"
    card_view:cardBackgroundColor="@color/primary_light"
    card_view:contentPaddingLeft="16dp"
    card_view:contentPaddingTop="24dp"
    card_view:contentPaddingRight="16dp"
    card_view:contentPaddingBottom="24dp"
    card_view:cardElevation="2dp"
    card_view:cardCornerRadius="2dp">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/exercise_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/primary_text"
            android:text="@string/hello_blank_fragment" />
        <TextView
            android:id="@+id/set_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/primary_text"
            android:text="@string/hello_blank_fragment" />
    </LinearLayout>

</android.support.v7.widget.CardView>